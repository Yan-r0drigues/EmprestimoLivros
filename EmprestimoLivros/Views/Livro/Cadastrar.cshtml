@model LivroModel
@{
    ViewData["Title"] = "Cadastrar Livros";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Livros</h1>
    </div>

    <form method="post" asp-controller="Livro" asp-action="Cadastrar">


        <div class="mb-3">
            <label for="Titulo" class="form-label text-light">Título:</label>
            <input type="text" class="form-control text-dark" asp-for="Titulo" id="titulo" placeholder="Qual o título do livro?">
            <span class="text-danger" asp-validation-for="Titulo"></span>
        </div>


        <div class="mb-3">
            <label for="Autor" class="form-label text-light">Autor:</label>
            <input type="text" class="form-control text-dark" asp-for="Autor" id="autor" placeholder="Quem escreveu o livro?">
            <span class="text-danger" asp-validation-for="Autor"></span>
        </div>


        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Editora:</label>
            <input type="text" class="form-control text-dark" asp-for="Editora" id="editora" placeholder="Qual a editora do livro?">
            <span class="text-danger" asp-validation-for="Editora"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Ano de Publicação:</label>
            <input type="date" class="form-control text-dark" asp-for="DataPublicacao" id="ano-publicacao" placeholder="Qual o ano de publicação do livro?">
            <span class="text-danger" asp-validation-for="DataPublicacao"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Cadastrar</button>
            <a class="btn btn-primary w-50" asp-controller="Livro" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>
